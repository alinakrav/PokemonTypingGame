import greenfoot.*;  // (World, Actor, GreenfootImage, Greenfoot and MouseInfo)

/**
 * Write a description of class PlayMode here.
 * 
 * @author (your name) 
 * @version (a version number or a date)
 */
public class PlayBu extends Button
{
    int gameSpeed;
    int easySpeed = 10;
    int hardSpeed = 15;

    //name of mode that button will set to game
    public PlayButton(String mode) {
        super();
        setImage(new GreenfootImage(mode + "Button.png"));
        if(mode.equals("easy"))
            gameSpeed = easySpeed;
        else if(mode.equals("hard"))
            gameSpeed = hardSpeed;
    }   
    
    public void ifClicked() { 
        
    }
}
